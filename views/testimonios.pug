extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center.mb-5
            p
                | Lee sobre nuestros clientes y sus experiencias

        .row.testimonios
            each testimonio in testimonios
                .col-md-6.col-lg-4.mb-4
                    .card.shadow-lg.border-light
                        .card-body
                            blockquote.blockquote
                                p.mb-0.text-center
                                    | "#{testimonio.mensaje}"
                            footer.blockquote-footer.text-right
                                | — #{testimonio.nombre}

        .row
            h2.d-block.w-100.text-center Agrega un Testimonio

            if(errores)
                each error in errores
                    .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimonios" method="POST")
                        .form-group
                            label(style="font-weight: bold;", for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control", value=nombre)
                        .form-group
                            label(style="font-weight: bold;", for="correo") Correo Electrónico
                            input#correo(type="text", placeholder="Tu correo electrónico", name="correo", class="form-control", value=correoelectronico)
                        .form-group
                            label(style="font-weight: bold;", for="mensaje") Mensaje
                            textarea#mensaje(class="form-control", name="mensaje", placeholder="Tu Mensaje", rows=3)=mensaje

                        input.btn.btn-success.btn-block(type="submit")
